{
  "name": "@mgen/markdown",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "index.js",
  "bin": {
    "mgen-dev": "dev.js",
    "mgen-sites": "sites.js",
    "mgen": "serve.js"
  },
  "scripts": {
    "build": "pnpm build:mgen && pnpm build:sites",
    "build:mgen": "tsup-node --config configs/tsup.config.ts",
    "build:sites": "node --enable-source-maps -r esbuild-register ./sites.js ./sites",
    "start": "tsup-node --config configs/tsup.config.ts --watch src  --watch configs --onSuccess 'pnpm dev' ",
    "dev": "node --enable-source-maps -r esbuild-register ./dev.js ./sites",
    "serve": "node --enable-source-maps -r esbuild-register ./serve.js ./sites",
    "clean": "rm -rf dist",
    "clean:nm": "rm -rf node_modules",
    "clean:full": "pnpm clean && pnpm clean:nm"
  },
  "dependencies": {
    "@keg-hub/jsutils": "^10.0.0",
    "@keg-hub/parse-config": "2.1.0",
    "@warren-bank/serve": "130002.18.6",
    "alias-hq": "6.2.2",
    "esbuild-register": "3.5.0",
    "fdir": "6.3.0",
    "flexsearch": "0.7.43",
    "js-yaml": "4.1.0",
    "marked": "14.1.2",
    "tsup": "8.3.0"
  }
}
